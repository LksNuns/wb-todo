  <li class="ui-state-default margin-task" id=<%= "task-#{task.id}" %>>
  <%= form_for [:authenticable, task], remote: true do |f| %>
    <div class="checkbox">
      <label>

        <%= f.check_box :finished, class: "finished-task" %>
        <div class="body-space">
          <div class="task-body"><%= task.body %></div>

          <div class="task-edit">

            <div class="input-group">
              <%= f.text_field :body, class: "form-control input-sm" %>
              <span class="input-group-btn">
                <%= f.submit "Edit", class: "btn-update-task btn btn-success btn-sm" %>
              </span>
            </div>
        </div>

        </div>

    </label>
    <div class="btn-task pull-right">
      <button class="edit-item btn btn-primary btn-xs"><%= fa_icon "pencil" %></button>
      <%= link_to authenticable_task_path(task.id), class: "remove-item btn btn-danger btn-xs", method: :delete, remote: true do %>
        <%= fa_icon "trash" %>
      <% end %>
    </div>
    </div>
    <% end %>
  </li>
