<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Sign in</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form accept-charset="UTF-8" role="form">
                    <fieldset>
			    	  	<div class="form-group">
                  <%= f.email_field :email, id: "inputEmail", class: "form-control", autofocus: true, placeholder: "E-mail" %>
			    		</div>
			    		<div class="form-group">
                <%= f.password_field :password, id:"inputPassword", class:"form-control", autocomplete: "off", placeholder: "Password" %>
			    		</div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, id:"inputPassword", class:"form-control", autocomplete: "off", placeholder: "Confrim Password" %>
			    		</div>

			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Sign Up">
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
<% end %>
